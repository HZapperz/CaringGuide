// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id String @id

  // personal Details
  firstName             String
  middleName            String?
  lastName              String
  dob                   DateTime
  gender                String
  avatar                String?
  // Common Details
  experience            Experience
  condition             String?
  // Mentor
  about                 String?
  // Mentee
  patientName           String?
  synopsis              String?
  relationShipToPatient String?

  // Contact Details
  email String
  phone String

  role Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MentorMenteeMatch {
  id       String @id @default(uuid())
  mentorId String
  menteeId String
}

model Journal {
  jId         String @id @default(uuid())
  id          String
  title       String
  description String
  time        DateTime @default(now())
}

model Resources {
  id          String @id @default(uuid())
  imgsrc      String
  category    String
  title       String
  sub         String
  text        String
  link        String
  favorite    Boolean
}

model UserFavourites {
  id         String @id @default(uuid())
  userId     String
  resourceId String
  isStarred  Boolean
  isLiked    Boolean
  isDisliked Boolean
}

enum Role {
  MENTOR
  MENTEE
}

enum Experience {
  LESS_THAN_2
  BETWEEN_2_AND_4
  MORE_THAN_4
}
