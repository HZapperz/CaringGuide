// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id                    String      @id
  // personal Details
  firstName             String
  middleName            String?
  lastName              String
  dob                   DateTime
  gender                String
  avatar                String?
  // Common Details
  experience            Experience?
  condition             String?
  // Mentor
  about                 String?
  // Mentee
  patientName           String?
  synopsis              String?
  relationShipToPatient String?
  location              String?
  state                 String?

  // Contact Details
  email String
  phone String

  role      Role
  favorites UserFavourites[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MentorMenteeMatch {
  id       String @id @default(uuid())
  mentorId String
  menteeId String
}

model Journal {
  jId         String   @id @default(uuid())
  id          String
  title       String
  description String
  time        DateTime @default(now())
}

model Resources {
  id          String @id @default(uuid())
  title       String
  description String
  link        String
  category    String
  image       String

  favoritedBy UserFavourites[]
}

model UserFavourites {
  id         String  @id @default(uuid())
  userId     String
  resourceId String
  isStarred  Boolean
  isLiked    Boolean
  isDisliked Boolean

  user     Profile   @relation(fields: [userId], references: [id])
  resource Resources @relation(fields: [resourceId], references: [id])
}
model Image {
  id    Int     @id @default(autoincrement())
  url   String
}


enum Role {
  MENTOR
  MENTEE
  ADMIN
}

enum Experience {
  LESS_THAN_2
  BETWEEN_2_AND_4
  MORE_THAN_4
}
